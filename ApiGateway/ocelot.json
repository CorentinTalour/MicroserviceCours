{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/Produits",
      "DownstreamScheme": "http",
      "ServiceName": "produit-service",
      "UseServiceDiscovery": true,
      "UpstreamPathTemplate": "/produits",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/Commentaires",
      "DownstreamScheme": "http",
      "ServiceName": "commentaire-service",
      "UseServiceDiscovery": true,
      "UpstreamPathTemplate": "/commentaires",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "ServiceName": "cqrs-service",
      "UseServiceDiscovery": true,
      "UpstreamPathTemplate": "/cqrs/{everything}"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5050",
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8761,
      "Type": "Eureka"
    }
  }
}